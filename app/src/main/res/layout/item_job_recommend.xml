<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/selector_background_whitebutton"
    android:padding="0dp">

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@color/almostWhite"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Android 开发工程师"
        android:textColor="@color/darkBlack"
        android:textSize="@dimen/font_h3"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_job_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="10-12K"
        android:textColor="@color/materialRed"
        android:textSize="@dimen/font_middle"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_job_name"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_job_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="深圳 | 南山区 | 1-3年 | 本科"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        android:typeface="monospace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_job_name" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_job_company_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_job_detail"
        app:layout_constraintVertical_bias="0.6"
        android:src="@drawable/icon_company_lagou"
        app:riv_border_width="0dip"
        app:riv_corner_radius="6dip" />

    <TextView
        android:id="@+id/tv_job_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="华星光电"
        android:textColor="@color/deepDark"
        android:textSize="@dimen/font_middle"
        app:layout_constraintLeft_toRightOf="@+id/iv_job_company_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_job_detail" />

    <TextView
        android:id="@+id/tv_job_company_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="三资企业 | 10000人以上 | 液晶面板"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_job_company_logo" />

    <TextView
        android:id="@+id/tv_job_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="8月13日"
        android:textSize="@dimen/font_small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_job_detail"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>