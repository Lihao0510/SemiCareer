<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/colorPrimary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary" />

        <ScrollView
            android:id="@+id/sv_center_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorPrimary">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_center_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="2dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_center_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王妮金"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/civ_center_head"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/tv_center_career"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Array Test工程师,3年工作经验"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_small"
                        android:typeface="monospace"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_center_name" />

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/pureWhite"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/ll_center_look"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_background_whitebutton"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_center_look_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="0"
                            android:textColor="@color/pureBlack"
                            android:textSize="@dimen/icon_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="被查看"
                            android:textColor="@color/dimBar"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:id="@+id/ll_center_invite"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_background_whitebutton"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_center_interview_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="0"
                            android:textColor="@color/pureBlack"
                            android:textSize="@dimen/icon_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="面试邀请"
                            android:textColor="@color/dimBar"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:id="@+id/ll_center_mail"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_background_whitebutton"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_center_message_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="0"
                            android:textColor="@color/pureBlack"
                            android:textSize="@dimen/icon_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="站内信"
                            android:textColor="@color/dimBar"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/itsWhite" />

                <LinearLayout
                    android:id="@+id/ll_center_mymessage"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_red"
                        android:gravity="center"
                        android:text="{icon-user}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="我的资料"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="@color/alittleGray" />

                <LinearLayout
                    android:id="@+id/ll_center_resume"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_blue"
                        android:gravity="center"
                        android:text="{icon-note}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="我的简历"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="@color/alittleGray" />

                <LinearLayout
                    android:id="@+id/ll_center_collect"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_yellow"
                        android:gravity="center"
                        android:text="{icon-tag}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="我的职位收藏"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="@color/alittleGray" />

                <LinearLayout
                    android:id="@+id/ll_center_private"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_green"
                        android:gravity="center"
                        android:text="{icon-pin}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="我投递的职位"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/itsWhite" />

                <LinearLayout
                    android:id="@+id/ll_center_reflect"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_amber"
                        android:gravity="center"
                        android:text="{icon-volume-2}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="意见反馈"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="@color/alittleGray" />

                <LinearLayout
                    android:id="@+id/ll_center_setting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_background_whitebutton"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_button_conner_purple"
                        android:gravity="center"
                        android:text="{icon-settings}"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/font_h2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="系统设置"
                        android:textColor="@color/deepDark"
                        android:textSize="@dimen/font_h3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="{ion-ios-arrow-right}"
                        android:textColor="@color/littleGray"
                        android:textSize="@dimen/icon_normal" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="56dp" />


            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>