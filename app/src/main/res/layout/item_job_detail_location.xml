<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_jobdetail_location"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="16dp"
    android:background="@color/pureWhite"
    android:orientation="vertical">

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="{md-place}  工作地址"
        android:textColor="@color/deepDark"
        android:textSize="@dimen/font_h3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/alittleGray" />

    <TextView
        android:id="@+id/tv_job_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingLeft="16dp"
        android:text="光明新区塘明大道2号"
        android:textSize="@dimen/font_small" />

</LinearLayout>